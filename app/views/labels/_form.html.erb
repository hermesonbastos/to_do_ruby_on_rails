  <%= form_with model: [ board, Label.new ],
                local: false,
                data: {
                  action: "ajax:success->labels#addNewLabel ajax:error->labels#showErrors"
                } do |f| %>
    <div class="form-control mb-2 flex gap-2 items-end">
      <%= f.text_field :title,
                      placeholder: "TÃ­tulo",
                      class: "input input-sm w-full" %>
      <%= f.select :color,
                  %w[primary secondary accent info success warning error],
                  {},
                  class: "select select-sm" %>
      <%= f.submit "Criar", class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>
